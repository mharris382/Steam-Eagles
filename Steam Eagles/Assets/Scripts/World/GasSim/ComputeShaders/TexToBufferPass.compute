#pragma kernel CSMain

struct Cell
{
    int3 position;
    int pressure;
};

int4 bounds;
float4 globalWind;

Texture2D<float4> solid;
Texture2D<float4> gas;

RWStructuredBuffer<Cell> cells;


[numthreads(10,1,1)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
    Cell cell = cells[id.x];
    cell.pressure = int(gas[cell.position.xy].x);
    cells[id.x] = cell;
}
